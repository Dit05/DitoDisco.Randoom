<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Missing XML comment for publicly visible type or member -->
    <NoWarn>$(NoWarn);1573</NoWarn> <!-- Parameter has no matching param tag in the XML comment -->
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>DitoDisco.Randoom</PackageId>
    <PackageTags>randoom;novelty</PackageTags>
    <Version>1.0.0-pre2</Version>
    <Authors>Dit05</Authors>
    <Description>
      Novelty (pseudo)random number generators.

      Currently only features one generator:
      - Rule30Random: Generates pseudorandom numbers using the Rule 30 elementary cellular automaton.
    </Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Dit05/DitoDisco.Randoom</PackageProjectUrl>
  </PropertyGroup>

</Project>
